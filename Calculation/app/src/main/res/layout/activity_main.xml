<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#2E2B2B"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/result"
            android:layout_width="fill_parent"
            android:layout_height="230dp"
            android:background="#000000"
            android:gravity="right|bottom"
            android:text="@string/num_0"
            android:paddingRight="33dp"
            android:textSize="32pt"
            android:textColor="@color/white"
            />

        <LinearLayout
            android:id="@+id/LinearLayout02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/AC"
                        android:layout_width="35pt"
                        android:layout_height="35pt"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/circlebuttongray"
                        android:text="AC"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textSize="12pt" />

                    <Button
                        android:id="@+id/positive"
                        android:layout_width="35pt"
                        android:layout_height="35pt"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/circlebuttongray"
                        android:layout_gravity="center"
                        android:text="+/-"
                        android:textAlignment="center"
                        android:textSize="12pt" />

                    <Button
                        android:id="@+id/percent"
                        android:layout_width="35pt"
                        android:layout_height="35pt"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:background="@drawable/circlebuttongray"
                        android:text="%"
                        android:textAlignment="center"
                        android:textSize="15pt" />

                    <Button
                        android:id="@+id/divide"
                        android:layout_width="35pt"
                        android:layout_height="35pt"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/circlebuttonorange"
                        android:text="÷"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="18pt" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/number1"
                        android:layout_width="35pt"
                        android:layout_height="35pt"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/circlebuttondarkgray"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="15pt" />

                    <Button
                        android:id="@+id/number2"
                        android:layout_width="35pt"
                        android:layout_height="35pt"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/circlebuttondarkgray"
                        android:text="2"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="15pt"
                        style="?android:attr/buttonBarButtonStyle" />

                    <Button
                        android:id="@+id/number3"
                        android:layout_width="35pt"
                        android:layout_height="35pt"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/circlebuttondarkgray"
                        android:text="3"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="15pt" />
                    <Button
                        android:id="@+id/multiply"
                        android:layout_width="35pt"
                        android:layout_height="35pt"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/circlebuttonorange"
                        android:text="×"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="17pt" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/number4"
                        android:layout_width="35pt"
                        android:layout_height="35pt"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/circlebuttondarkgray"
                        android:text="4"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="15pt" />

                    <Button
                        android:id="@+id/number5"
                        android:layout_width="35pt"
                        android:layout_height="35pt"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/circlebuttondarkgray"
                        android:text="5"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="15pt" />

                    <Button
                        android:id="@+id/number6"
                        android:layout_width="35pt"
                        android:layout_height="35pt"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/circlebuttondarkgray"
                        android:text="6"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="15pt" />
                    <Button
                        android:id="@+id/minus"
                        android:layout_width="35pt"
                        android:layout_height="35pt"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/circlebuttonorange"
                        android:text="－"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="12pt" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/number7"
                        android:layout_width="35pt"
                        android:layout_height="35pt"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/circlebuttondarkgray"
                        android:text="7"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="15pt" />

                    <Button
                        android:id="@+id/number8"
                        android:layout_width="35pt"
                        android:layout_height="35pt"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/circlebuttondarkgray"
                        android:text="8"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="15pt" />

                    <Button
                        android:id="@+id/number9"
                        android:layout_width="35pt"
                        android:layout_height="35pt"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/circlebuttondarkgray"
                        android:text="9"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="15pt" />
                    <Button
                        android:id="@+id/plus"
                        android:layout_width="35pt"
                        android:layout_height="35pt"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/circlebuttonorange"
                        android:text="+"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="15pt" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/number0"
                        android:layout_width="78pt"
                        android:layout_height="35pt"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/roundbutton"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="15pt" />


                    <Button
                        android:id="@+id/dot"
                        android:layout_width="35pt"
                        android:layout_height="35pt"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/circlebuttondarkgray"
                        android:text="."
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="15pt" />
                    <Button
                        android:id="@+id/equals"
                        android:layout_width="35pt"
                        android:layout_height="35pt"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1.0"
                        android:background="@drawable/circlebuttonorange"
                        android:text="="
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="15pt" />
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>


</LinearLayout>